<p id="notice"<%= notice%> </p>

<h1>Notices</h1>
<br>
<div class="container">
<table class="table table-bordered">
  <thead >
    <tr>
      <th >Titulo</th>
      <th>Texto</th>
      <th>Fecha</th>
      <th>Tipo</th>
      <th>Nombre</th>
      <th>Hora</th>
      <th>Imagen</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @notices.each do |notice| %>
      <tr>
        <td><%= notice.titulo %></td>
        <td><%= notice.texto %></td>
        <td><%= notice.fecha %></td>
        <td><%= notice.tipo %></td>
        <td><%= notice.nombre %></td>
        <td><%= notice.hora %></td>
        <td class="text-center"><%= image_tag notice.image,:size => "100x70" %></td>
        <td><%= link_to 'Show', notice %></td>
        <td><%= link_to 'Edit', edit_notice_path(notice) %></td>
        <td><%= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Notice', new_notice_path %>
