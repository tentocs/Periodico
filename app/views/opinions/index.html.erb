        <td><%= link_to 'Periodico', opinion %></td>
        <td><%= link_to 'Editar', edit_opinion_path(opinion) %></td>
        <td><%= link_to 'Eliminar', opinion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

